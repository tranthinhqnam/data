<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:gravity="center_horizontal">

     <LinearLayout
         android:id="@+id/datacont"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:orientation="vertical"
         android:layout_marginTop="50dp">

         <TextView
             android:id="@+id/userName"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="User Name"
             android:textSize="20sp"
             android:textColor="@android:color/black">
         </TextView>

         <TextView
             android:id="@+id/userPhone"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="User Phone"
             android:textSize="20sp"
             android:textColor="@android:color/black"
             android:layout_marginTop="10dp">
         </TextView>

     </LinearLayout>

    <LinearLayout
        android:id="@+id/updcont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/datacont"
        android:layout_marginTop="50dp">

        <EditText
            android:id="@+id/userNameUpd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:hint="Write Your Name">
        </EditText>

        <EditText
            android:id="@+id/userPhoneUpd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:hint="Write Your Phone No."
            android:inputType="number"
            android:layout_marginTop="10dp">
        </EditText>

    </LinearLayout>

    <Button
        android:id="@+id/updBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UPDATE"
        android:layout_below="@+id/updcont"
        android:layout_marginTop="20dp">
    </Button>

</RelativeLayout>